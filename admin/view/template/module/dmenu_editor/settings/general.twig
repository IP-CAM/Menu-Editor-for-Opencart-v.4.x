<div class="form-group row mb-3" style="margin: 0 !important;">
    <label class="col-sm-3 control-label col-form-label" for="module_dmenu_editor-status">{{ entry_status }}</label>
    <div class="col-sm-9">
        <select name="module_dmenu_editor_status" id="module_dmenu_editor-status" class="form-select">
            {% if module_dmenu_editor_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
            {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
            {% endif %}
        </select>
    </div>
</div>

<div class="form-group row mb-3" style="background-color: #ededed; margin: 20px 0 0 !important; padding-top: 20px !important;">
    <label class="col-sm-3 control-label col-form-label" style="font-size: 1.2em;">{{ entry_dev_block }}</label>
</div>

<div class="form-group row mb-3 setting-cms_blog" style="background-color: #ededed; margin: 0 !important; padding-bottom: 20px !important;">
    <label class="col-sm-3 control-label col-form-label" for="module_dmenu_editor-cms_blog">{{ entry_cms_blog }}</label>
    <div class="col-sm-9">
        <select name="module_dmenu_editor_settings[general][cms_blog]" id="module_dmenu_editor-cms_blog" class="form-select">
            {% if module_settings['general']['cms_blog'] %}
                <option value="0">{{ text_disabled }}</option>
                <option value="1" selected="selected">{{ text_enabled }}</option>
            {% else %}
                <option value="0" selected="selected">{{ text_disabled }}</option>
                <option value="1">{{ text_enabled }}</option>
            {% endif %}
        </select>
    </div>
</div>