                                                                </div>

                                                                <div class="sticky_menu_item_search_help">
                                                                    <div style="color: #f00;">*</div>
                                                                    <div>{{ search_limit_text }}</div>
                                                                </div>

                                                                <div class="sticky_menu_item_search_content">
                                                                    <div class="sticky_menu_item_search_wrap sticky-clone-sortable"></div>
                                                                </div>
                                                            </div>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>

                                            {% if products %}
