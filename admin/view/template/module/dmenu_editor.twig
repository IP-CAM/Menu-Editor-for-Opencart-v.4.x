<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="float-end">
                <a href="{{ apply }}" onclick="$('#form-module_dmenu_editor').prop('action', $(this).prop('href')).submit();return false;" data-bs-toggle="tooltip" title="{{ button_save_stay }}" class="btn btn-success">
                    <i class="fas fa-save"></i>
                </a>
                <a href="{{ action }}" onclick="$('#form-module_dmenu_editor').prop('action', $(this).prop('href')).submit();return false;" data-bs-toggle="tooltip" title="{{ button_save_leave }}" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                </a>
                <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light">
                    <i class="fas fa-reply"></i>
                </a>
            </div>

            <h1>{{ heading_title }}</h1>

            <ol class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ol>
        </div>
    </div>

    <div class="container-fluid">
        <div class="card">
            <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_edit }}</div>
            <div class="card-body">
                {% set class_warning_menu_main = '' %}
                {% set class_warning_menu_top = '' %}
                {% set class_warning_menu_footer = '' %}
                {% set class_warning_menu_social = '' %}

                {% if success %}
                    <div class="alert alert-success alert-dismissible">
                        <div class="dmenu-alert-content">
                            <i class="fas fa-exclamation-circle"></i>
                            <span>{{ success }}</span>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    </div>
                {% endif %}

                {% for store in stores %}
                    {% if error_items['main']['store_' ~ store.store_id]['empty_fields'] %}
                        {% set class_warning_menu_main = 'alert_warning' %}

                        <div class="alert alert-warning alert-dismissible">
                            <div class="dmenu-alert-title">{{ tab_menu_main }} - {{ text_store }} «{{ store.name }}»</div>
                            <div class="dmenu-alert-content">
                                <i class="fas fa-exclamation-circle"></i>
                                <span>{{ error_items['main']['store_' ~ store.store_id]['empty_fields'] }}</span>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}

                {% for store in stores %}
                    {% if error_items['top']['store_' ~ store.store_id]['empty_fields'] %}
                        {% set class_warning_menu_top = 'alert_warning' %}

                        <div class="alert alert-warning alert-dismissible">
                            <div class="dmenu-alert-title">{{ tab_menu_top }} - {{ text_store }} «{{ store.name }}»</div>
                            <div class="dmenu-alert-content">
                                <i class="fas fa-exclamation-circle"></i>
                                <span>{{ error_items['top']['store_' ~ store.store_id]['empty_fields'] }}</span>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}

                {% for store in stores %}
                    {% if error_items['footer']['store_' ~ store.store_id]['empty_fields'] %}
                        {% set class_warning_menu_footer = 'alert_warning' %}

                        <div class="alert alert-warning alert-dismissible">
                            <div class="dmenu-alert-title">{{ tab_menu_footer }} - {{ text_store }} «{{ store.name }}»</div>
                            <div class="dmenu-alert-content">
                                <i class="fas fa-exclamation-circle"></i>
                                <span>{{ error_items['footer']['store_' ~ store.store_id]['empty_fields'] }}</span>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}

                {% for store in stores %}
                    {% if error_items['social']['store_' ~ store.store_id]['empty_fields'] %}
                        {% set class_warning_menu_social = 'alert_warning' %}

                        <div class="alert alert-warning alert-dismissible">
                            <div class="dmenu-alert-title">{{ tab_menu_social }} - {{ text_store }} «{{ store.name }}»</div>
                            <div class="dmenu-alert-content">
                                <i class="fas fa-exclamation-circle"></i>
                                <span>{{ error_items['social']['store_' ~ store.store_id]['empty_fields'] }}</span>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}

                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module_dmenu_editor" class="form-horizontal">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a href="#tab-menu_general" data-bs-toggle="tab" class="nav-link active">{{ tab_menu_general }}</a>
                        </li>

                        <li class="nav-item">
                            <a href="#tab-settings" data-bs-toggle="tab" class="nav-link">{{ tab_settings }}</a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane active" id="tab-menu_general">
                            <div class="module-dmenu_editor-menu">
                                <div class="module-menu_items_add">
                                    <div class="sticky-menu_items_button">
                                        <button type="button">{{ entry_stycky_title }}</button>
                                    </div>

                                    <div class="sticky-menu_items_add">
                                        <div class="form-group">
                                            <div class="col-sm-12 text-left sticky-menu_items-title">{{ entry_stycky_title }}</div>
                                        </div>

                                        <div class="sticky-menu_items-content">
                                            <div class="form-group sticky-menu_item_wrap open">
                                                <div class="sticky-menu_item">
                                                    <div class="text-left sticky-menu_item_title">
                                                        <span>{{ entry_add_pages }}</span>
                                                        <i class="fas fa-angle-down"></i>
                                                    </div>

                                                    <div class="sticky-menu_item_content tab-content" style="display: block;">
                                                        <div class="sticky_menu_item_under_wrap">
                                                            <div class="sticky_menu_item_last_wrap sticky-clone-sortable">
                                                                <div class="sticky-menu_item-item sticky-menu_item-item_0">
                                                                    <span data-id="0" data-url_link="" data-layout="custom" 
                                                                        {% for language in languages %}
                                                                            data-name_{{ language['language_id'] }}="{{ other_pages['custom']['names'][language.language_id] }}" 
                                                                            data-url_seo_{{ language['language_id'] }}="" 
                                                                        {% endfor %}
                                                                    >{{ entry_add_custom_link }}</span>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="sticky-menu_item_tabs">
                                                            <ul class="nav nav-tabs">
                                                                <li class="nav-item">
                                                                    <a href="#tab-general_sticky_pages_last" data-bs-toggle="tab" class="nav-link active">{{ tab_sticky_all }}</a>
                                                                </li>
                                                            </ul>
                                                        </div>

                                                        <div class="tab-pane active" id="tab-general_sticky_pages_last">
                                                            <div class="sticky_menu_item_last_wrap sticky-clone-sortable">
                                                                {% for opencart_page in opencart_pages %}
                                                                    <div class="sticky-menu_item-item sticky-menu_item-item_{{ loop.index0 }}">
                                                                        <span data-id="{{ opencart_page['id'] }}" data-url_link="{{ opencart_page['url']['link'] }}" data-layout="{{ opencart_page['layout'] }}" 
                                                                            {% for language in languages %}
                                                                                data-name_{{ language['language_id'] }}="{{ opencart_page['names'][language.language_id] }}" 
                                                                                data-url_seo_{{ language['language_id'] }}="{% if opencart_page['url']['seo'][language.language_id] is defined %}{{ opencart_page['url']['seo'][language.language_id] }}{% endif %}" 
                                                                            {% endfor %}
